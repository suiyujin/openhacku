<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Time</th>
      <th>Price</th>
      <th>Place</th>
      <th>Bought</th>
      <th>User</th>
      <th>BoughtUser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
        <td><%= ticket.body %></td>
        <td><%= ticket.time %></td>
        <td><%= ticket.price %></td>
        <td><%= ticket.place %></td>
        <td><%= ticket.bought %></td>
        <td><%= ticket.user %></td>
        <td><%= ticket.bought_user %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

